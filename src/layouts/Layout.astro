---

// Imports
import { ClientRouter } from 'astro:transitions'; // Was ViewTransitions (deprecated)
import '../styles/global.css';

import ContentBox from '../components/ContentBox.astro'
import NavBar from '../components/NavBar.astro';

// Props
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A personal Vampire: The Masquerade character vault." />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

        <!-- favicons -->
        <link rel="icon" type="image/png" href="/favicon/favicon-96x96.png" sizes="96x96" />
        <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
        <link rel="shortcut icon" href="/favicon/favicon.ico" />
        <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
        <meta name="apple-mobile-web-app-title" content="Vault" />
        <link rel="manifest" href="/favicon/site.webmanifest" />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Gloock&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">

		<title>{title}</title>

        <!-- Enable ViewTransitions -->
		<ClientRouter />

        <!-- Dark mode blocking: prevent white flash -->
        <script is:inline>
            // Returns 'dark' | 'light'
            function getPreferredTheme() {
                // localStorage has highest priority
                if (localStorage.getItem('theme')) {
                    return localStorage.getItem('theme');
                }
                // Then system preference
                if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    return 'dark';
                }
                return 'light';
            }

            // Apply theme to a given document (works for current doc + incoming doc)
            function applyTheme(doc = document) {
                const theme = getPreferredTheme();
                if (theme === 'dark') {
                    doc.documentElement.classList.add('dark');
                } else {
                    doc.documentElement.classList.remove('dark');
                }
                // Keep localStorage in sync (mainly useful for initial load or toggle)
                localStorage.setItem('theme', theme);
            }

            // Apply immediately on current page (prevents flash on hard reload)
            applyTheme();

            // Re-apply after every client navigation (fallback / safety)
            document.addEventListener('astro:after-swap', () => {
                applyTheme();
            });

            // BEFORE the new content is painted
            document.addEventListener('astro:before-swap', (event) => {
                // event.newDocument is the incoming page's document
                applyTheme(event.newDocument);
            });
        </script>
	</head>
	
	<body class="bg-white dark:bg-gray-950 text-gray-900 dark:text-gray-100 transition-colors duration-300 overflow-hidden">
        
        <div class="flex flex-col gap-5 w-screen max-w-4xl h-screen mx-auto p-10">
            
            <NavBar />

            <main class="flex-1 min-h-0 w-full">
                <ContentBox>
                    <slot /> <!-- Page content goes here! -->
                </ContentBox>
            </main>
            
        </div>
	</body>
</html>

<style>

    @reference '../styles/global.css';

    /* Prevent context menu/interaction with ImageCarousel images */
    .protect-image {
        pointer-events: none;           /* stops almost all interaction */
        user-select: none;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        -webkit-user-drag: none;       /* blocks drag on Safari/Chrome */
        user-drag: none;
    }

</style>